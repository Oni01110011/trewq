{
  "root": "dist",
  "clean_urls": true,
  "routes": {
    "/**": "index.html"
  },
  "proxies": {
    "/api/": {
      "origin": "${BACKEND_URL}"
    }
  },
  "headers": {
    "/**": {
      "Cache-Control": "no-cache, no-store, must-revalidate",
      "Pragma": "no-cache",
      "Expires": "0"
    },
    "/js/**": {
      "Cache-Control": "public, max-age=31536000"
    },
    "/css/**": {
      "Cache-Control": "public, max-age=31536000"
    },
    "/img/**": {
      "Cache-Control": "public, max-age=31536000"
    }
  }
}
